{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "lib": [
      "es2019",
      "dom"
    ],
    "noImplicitUseStrict": true,
    "sourceMap": true,
    "outDir": "build",
    "typeRoots": ["./types", "./node_modules/@types"],
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "types"
  ],
  "include": [
    "src/**/*"
  ]
}